<!DOCTYPE html>
<html>
<head>
	<title>FinFree</title>
	 <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	 <link type="text/css" rel="stylesheet" href="assets/materialize.min.css"  media="screen,projection"/>
	 <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
	<header>
		<nav>
			<div class="nav-wrapper">
			    <img class="brand-logo" src= "assets/SmallLogo.jpg">
					<a href="#" data-activates="mobile-demo" class="button-collapse">
			 			<i class="material-icons">menu</i>
		 			</a>
			    <ul class="right hide-on-med-and-down">
			    	<li><a href="#">Tutorial</a></li>
			    	<li><a href="#">Blog</a></li>
			    	<li><a href="#">Contacta</a></li>
			    	<% if user_signed_in? %>
		        <li>
			        <a class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Cerrar Sesion</a>
			        <%= link_to 'Sign out', destroy_user_session_path, method: 'DELETE' %>
		        </li>
		      		<% else %>
				    <li>
				      <a class ="waves-effect waves-light btn" type= "submit" <%= link_to 'Registrate Gratis', new_user_registration_path %>
				      </a>
				      <a class= "waves-effect waves-light btn" type="submit" <%= link_to 'Inicia Sesion', new_user_session_path %></a>
				    </li>
		      		<% end %>
			    </ul>
					<ul class="side-nav" id="mobile-demo">
						<li><a href="#">Tutorial</a></li>
						<li><a href="#">Blog</a></li>
						<li><a href="#">Contacta</a></li>
							<% if user_signed_in? %>
						<li>
							<a class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>Cerrar Sesion</a>
							<%= link_to 'Sign out', destroy_user_session_path, method: 'DELETE' %>
						</li>
							<% else %>
						<li>
							<a class ="waves-effect waves-light btn" type= "submit" <%= link_to 'Registrate Gratis', new_user_registration_path %>
							</a>
							<a class= "waves-effect waves-light btn" type="submit" <%= link_to 'Inicia Sesion', new_user_session_path %></a>
						</li>
							<% end %>
					</ul>
			</div>
		</nav>
	</header>

	<%= render 'slider' %>

	<script type="text/javascript" src="assets/materialize.min.js"></script>
</body>
</html>
